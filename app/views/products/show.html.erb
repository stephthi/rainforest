<h3><p>Reviews for <%= @product.name %></p></h3>
<p>Description: <%= @product.description %></p>
<p>Price: $<%= @product.formatted_price %></p>
-------------------
<h4>Reviews from Consumers</h4>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> Review by <%= review.user.name %></em>
        Added on: <%= review.created_at %>
        <p><%= link_to "Edit Review", "/products/#{@product.id}/reviews/#{review.id}/edit" %> | <%= link_to "Delete Review", "/products/#{@product.id}/reviews/#{review.id}", method: "delete" %></p>
        <p>-------------------</p>
      <% end %>
    </p>
	<% end %>



    <% if current_user %>
  <h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p>
<% end %>
